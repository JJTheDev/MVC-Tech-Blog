<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/dashboard">Dashboard</a>
        <a href="/logout">Log Out</a>
    </nav>

    <button onclick="location.href='/new-post'">Add New Post</button>

    {{#each posts}}
        <article>
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            <p>Posted on {{this.date}}</p>
            <button onclick="location.href='/edit-post/{{this.id}}'">Edit</button>
            <button onclick="location.href='/delete-post/{{this.id}}'">Delete</button>
        </article>
    {{/each}}
</body>
</html>
